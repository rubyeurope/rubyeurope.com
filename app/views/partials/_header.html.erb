      data-action="nav#close"
      data-nav-target="closeBtn">
    </button>
    <ul class="text-center text-sm lg:text-base bg-white list-style-none hidden lg:flex" data-nav-target="menu">
      <li class="md:inline-block md:border-l border-gray px-2 lg:px-5 pb-6 md:pb-0 uppercase tracking-wider hover:cursor-pointer hover:text-red">
        <%= link_to "Meetups", "/", class: 'bold' %>
      </li>
      <li class="md:inline-block md:border-l border-gray px-2 lg:px-5 pb-6 md:pb-0 uppercase tracking-wider hover:cursor-pointer hover:text-red">
        <%= link_to "Conferences", conferences_path, class: 'bold' %>
      </li>
      <li class="md:inline-block md:border-l border-gray px-2 lg:px-5 pb-6 md:pb-0 uppercase tracking-wider hover:cursor-pointer hover:text-red">
