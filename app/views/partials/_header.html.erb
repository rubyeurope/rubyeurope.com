<header class="bg-white p-6 text-black w-full shadow-b shadow-lg z-10 flex justify-between items-center relative h-20 md:h-28">
  <div>
    <%= link_to root_path, html_options = { class: "flex" } do %>
      <%= image_tag "ruby-europe-logo.svg", alt: "Ruby Europe Logo", class: "max-w-48 md:max-w-52 xl:max-w-[300px]"  %>
    <% end %>
  </div>
  <nav data-controller="nav" class="flex">
    <button class="lg:hidden" data-action="nav#open" data-nav-target="openBtn">
      <div class="bg-black h-[2px] w-6 mb-1"></div>
